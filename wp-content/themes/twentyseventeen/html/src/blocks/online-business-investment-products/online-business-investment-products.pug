                        tr
                            td                        
                                p.online-business-investment-products__rate до 24%
                        tr
                            td                        
                                p.online-business-investment-products__insurance До 5 млн. рублей
                        tr
                            td
                                p.online-business-investment-products__amount От 250 тыс. рублей
                        tr
                            td
                                p.online-business-investment-products__ratio Умеренный риск, средняя доходность
                .online-business-investment-products__wrapper
                    table
                        tr
                            td
                                .online-business-investment-products__name-wrapper
